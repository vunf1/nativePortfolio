{
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules",
      "src/app/assets/three/TD_class.ts"
    ],
    "include":[
      "app"
    ]
  },
  "rules": {
    "ordered-imports": false,
    "object-literal-sort-keys" : false,
    "max-line-length":false,
    "no-console":false,
    "no-empty":false,
    "interface-name":false,
    "variable-name":false,
    "disable-next-line": "max-classes-per-file",
    "directive-selector": [true, "attribute", "apr", "camelCase"],
    "component-selector": [true, "element", "apr", "kebab-case" ]
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
